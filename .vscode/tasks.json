{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Git Hooks",
      "type": "shell",
      "command": "git config core.hooksPath .githooks"
    },
    {
      "label": "Run Spotless on current file",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "spotlessApplyFile",
        "-PspotlessFile= ${relativeFile}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
