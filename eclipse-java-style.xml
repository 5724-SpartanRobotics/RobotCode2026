<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
    <profile name="Custom" version="12">
        <!-- Line length -->
        <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="100"/>

        <!-- Make all comments wrap at the same 100-column limit -->
        <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="100"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.format_line_comments" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.format_block_comments" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comments" value="true"/>

        <!-- Tabs -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="tab"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

        <!-- Wrapping behavior -->
        <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_closing_paren_in_method_invocation" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="16"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_binary_operator" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_comma_in_method_invocation_arguments" value="true"/>

        <!-- Do not compact method invocations -->
        <setting id="org.eclipse.jdt.core.formatter.compact_else_if" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.compact_assignment" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.compact_method_invocation" value="false"/>

        <!-- Empty block on one line: {} -->
        <setting id="org.eclipse.jdt.core.formatter.keep_empty_array_initializer_on_one_line" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.keep_empty_obj_initializer_on_one_line" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.keep_empty_block_on_one_line" value="true"/>

        <!-- Braces -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_type_declaration" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_constructor_declaration" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_opening_brace_in_method_declaration" value="true"/>

        <!-- Put closing paren of method declaration on its own line -->
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_closing_paren_in_method_declaration" value="true"/>
        <!-- Align wrapped parameters with one indent -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_parameters_in_method_declaration" value="16"/>

        <!-- Reduce continuation indent from 2 to 1 -->
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="1"/>
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation_for_array_initializer" value="1"/>

        <setting id="org.eclipse.jdt.core.formatter.alignment_for_selector_in_method_invocation" value="16"/>

        <!-- Constructor argument wrapping -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_allocation_expression" value="16"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_closing_paren_in_allocation_expression" value="true"/>
    </profile>
</profiles>
